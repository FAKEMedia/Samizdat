<form name="searchcertificates" method="get" action="<%== url_for('certificate_index') %>">
  <div class="row mb-3">
    <div class="input-group">
      <input class="form-control" type="text" name="searchterm" aria-label="<%== __x('Search field for {what}', what => __('certificates')) %>" placeholder="<%== __('Search for certificates') %>..." />
      <button class="btn btn-primary btn-sm rounded-lg" type="submit" aria-label="<%== __('Search') %>">
        <%== icon 'search', {} %>
      </button>
    </div>
  </div>
</form>
<a class="badge rounded-pill text-bg-primary" href="<%== url_for('certificate_new') %>"><%== __('Add certificate') %></a>
<a class="badge rounded-pill text-bg-primary" href="<%== url_for('certificate_expiring') %>"><%== __('Expiring') %></a>
<a class="badge rounded-pill text-bg-primary" href="<%== url_for('certificate_renew') %>"><%== __('Renew') %></a>